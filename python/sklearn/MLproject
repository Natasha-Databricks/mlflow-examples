name: mlflow-examples-sklearn

conda_env: conda.yaml

#docker_env:
  #image:  mlflow-train-sklearn-wine

entry_points:
  main:
    parameters:
      data_path: {type: string, default: "../../data/train/wine-quality-white.csv"}
      max_depth: int
      max_leaf_nodes: {type: int, default: 32}
      model_name: {type: string, default: None }
      run_origin: {type: string, default: "default" }
      log_as_onnx: {type: boolean, default: False}
      autolog: {type: boolean, default: False}
    command: "python main.py
                --data_path {data_path}
                --max_depth {max_depth}
                --max_leaf_nodes {max_leaf_nodes}
                --model_name {model_name}
                --log_as_onnx {log_as_onnx}
                --autolog {autolog}
                --run_origin {run_origin}"
  predict:
    parameters:
      model-uri: string
      flavor: string
      data-path: {type: string, default: ../../data/train/wine-quality-white.csv }
    command: "python -um wine_quality.predict 
                --model-uri {model-uri} 
                --flavor {flavor} 
                --data-path {data-path}"
